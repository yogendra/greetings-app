{
  "name": "Greetings App",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "workspaceFolder": "/app",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "cweijan.dbclient-jdbc"
      ],
      "settings": {
        "python.pythonPath": "/usr/local/bin/python",
        "terminal.integrated.shell.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "zsh (container default)": {
            "path": "/usr/bin/zsh",
            "overrideName": true
          },
          "bash": {
            "path": "/usr/bin/bash",
            "overrideName": true
          }
        }
      }
    }
  },
  "forwardPorts": [8000],
  "postCreateCommand": "alembic upgrade head"
}
